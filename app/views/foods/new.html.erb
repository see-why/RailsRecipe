<%= form_with url: "/foods", scope: :food do |form| %>
  <div class="form-container d-flex">
    <section class="title-section from-input d-flex">
      <%= form.text_field :name, placeholder: "Food Name", required: true %>
    </section>
    <section class="title-section from-input d-flex">
      <%= form.select :measurement_unit, ["grams", "units"], placeholder: "Measurement Unit", required: true %>
    </section>
    <section class="title-section from-input d-flex">
    <%= form.number_field :price, placeholder: "Unit Price", required: true %>
  </section>
    <%= form.submit "Save", class: "submit-btn" %>
    </div>
<% end %>